# Meal Planner - Terraform Configuration Example
#
# Copy this file to terraform.tfvars and fill in your values.
# terraform.tfvars is gitignored and should NOT be committed.

# GCP project ID (required)
project = "your-gcp-project-id"

# GCP region for regional resources
region = "europe-west1"

# Firestore location (multi-region recommended for durability)
# Options: eur3 (Europe), nam5 (US), etc.
firestore_location = "eur3"

# Firestore database name
firestore_database_name = "meal-planner"

# Recipe enhancement with Gemini AI
# Add your Gemini API key to Secret Manager:
#   echo -n "your-api-key" | gcloud secrets versions add gemini-api-key --data-file=-
# Then set enable_recipe_enhancement = true
enable_recipe_enhancement = false

# GCS bucket name for recipe images (must be globally unique)
recipe_images_bucket_name = "your-project-recipe-images"

# GCS bucket name for Terraform state (must be globally unique)
tfstate_bucket_name = "your-tfstate-bucket-name"

# Docker image tag for Cloud Run
# Default "latest" works for local dev. CI overrides with git SHA via:
#   terraform apply -var image_tag=$SHA
# image_tag = "latest"
